{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
      "strict": true,
      
      "module": "commonjs",
      "target": "ES2020",
      "lib": ["es2020", "dom"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "incremental": true,
      "forceConsistentCasingInFileNames": true,

      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,

      "outDir": "dist",
  },
  "include": [
      "src/**/*",
  ],
  "exclude": ["node_modules"],
}