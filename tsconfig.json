{
  "compilerOptions": {
      "strict": true,
      
      "module": "commonjs",
      "target": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "incremental": true,
      
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,

      "outDir": "dist",
  },
  "include": [
      "src/**/*",
  ],
  "exclude": ["node_modules"],
}